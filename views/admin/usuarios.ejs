<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container mt-4">
    <h2><i class="bi bi-people me-2"></i>Gesti√≥n de Usuarios</h2>
    
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Email</th>
                            <th>Rol</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% usuarios.forEach(usuario => { %>
                        <tr>
                            <td><%= usuario.nombre %></td>
                            <td><%= usuario.usuario %></td>
                            <td>
                                <span class="badge bg-<%= usuario.rol === 'admin' ? 'danger' : 'primary' %>">
                                    <%= usuario.rol %>
                                </span>
                            </td>
                            <td>
                                <form method="POST" action="/admin/usuarios/<%= usuario.id %>/rol" class="d-inline">
                                    <select name="rol" onchange="this.form.submit()" class="form-select form-select-sm d-inline-block w-auto">
                                        <option value="usuario" <%= usuario.rol === 'usuario' ? 'selected' : '' %>>Usuario</option>
                                        <option value="admin" <%= usuario.rol === 'admin' ? 'selected' : '' %>>Admin</option>
                                    </select>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>