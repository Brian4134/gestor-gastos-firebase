<%- include('partials/header') %>

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg" style="max-width: 400px;">
        <div class="card-header text-center bg-primary text-white">
            <h4 class="mb-0">
                <i class="bi bi-qr-code me-2"></i>
                Acceso Rápido
            </h4>
        </div>
        <div class="card-body text-center p-4">
            <p class="text-muted mb-4">Escanea este código QR para acceder a la aplicación</p>
            
            <div class="mb-4">
                <img src="<%= qrDataUrl %>" alt="QR Code" class="img-fluid border rounded" style="max-width: 250px;">
            </div>
            
            <div class="alert alert-info">
                <small>
                    <i class="bi bi-info-circle me-1"></i>
                    URL: <%= url %>
                </small>
            </div>
            
            <a href="/login" class="btn btn-primary">
                <i class="bi bi-box-arrow-in-right me-2"></i>
                Ir al Login
            </a>
        </div>
    </div>
</div>

<%- include('partials/footer') %>