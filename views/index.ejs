<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container mt-4 fade-in">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="mb-2">
                <i class="bi bi-wallet2 text-gradient"></i>
                Gestor de Gastos e Ingresos
            </h1>
            <p class="text-muted">Administra tus finanzas personales de manera eficiente</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalNuevaTransaccion">
                <i class="bi bi-plus-circle me-2"></i>Nueva Transacción
            </button>
        </div>
        <div class="col-md-6 text-md-end">
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline-secondary btn-sm" onclick="filtrarTipo('todos')">
                    <i class="bi bi-list me-1"></i>Todos
                </button>
                <button type="button" class="btn btn-outline-success btn-sm" onclick="filtrarTipo('ingreso')">
                    <i class="bi bi-arrow-up-circle me-1"></i>Ingresos
                </button>
                <button type="button" class="btn btn-outline-danger btn-sm" onclick="filtrarTipo('gasto')">
                    <i class="bi bi-arrow-down-circle me-1"></i>Gastos
                </button>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="bi bi-table me-2"></i>Historial de Transacciones
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="transaccionesTable">
                    <thead>
                        <tr>
                            <th>Usuario</th>
                            <th>Tipo</th>
                            <th>Categoría</th>
                            <th class="d-none d-lg-table-cell">Descripción</th>
                            <th>Monto</th>
                            <th class="d-none d-md-table-cell">Fecha</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (gastos && gastos.length > 0) { %>
                            <% gastos.forEach(g => { %>
                                <tr data-tipo="<%= g.tipo %>">
                                    <td><%= g.usuarioNombre || user.nombre || 'Usuario' %></td>
                                    <td>
                                        <% if (g.tipo === 'ingreso') { %>
                                            <span class="badge bg-success">
                                                <i class="bi bi-arrow-up-circle me-1"></i>Ingreso
                                            </span>
                                        <% } else { %>
                                            <span class="badge bg-danger">
                                                <i class="bi bi-arrow-down-circle me-1"></i>Gasto
                                            </span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <span class="fw-medium"><%= g.categoria %></span>
                                    </td>
                                    <td class="d-none d-lg-table-cell">
                                        <%= g.descripcion %>
                                    </td>
                                    <td>
                                        <span class="fw-bold <%= g.tipo === 'ingreso' ? 'text-success' : 'text-danger' %>">
                                            <%= g.tipo === 'ingreso' ? '+' : '-' %>S/ <%= g.monto %>
                                        </span>
                                    </td>
                                    <td class="d-none d-md-table-cell text-muted">
                                        <%= new Date(g.fecha).toLocaleDateString('es-PE') %>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="/editar/<%= g.id %>" class="btn btn-outline-warning" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form action="/eliminar/<%= g.id %>" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-outline-danger" 
                                                        onclick="return confirm('¿Seguro que deseas eliminar esta transacción?')" 
                                                        title="Eliminar">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <div class="text-muted">
                                        <i class="bi bi-inbox" style="font-size: 3rem; opacity: 0.3;"></i>
                                        <p class="mt-3 mb-2">No hay transacciones registradas</p>
                                        <small>Comienza agregando tu primera transacción</small>
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
function filtrarTipo(tipo) {
    const filas = document.querySelectorAll('#transaccionesTable tbody tr[data-tipo]');
    const botones = document.querySelectorAll('.btn-group .btn');
    
    // Remover clase activa de todos los botones
    botones.forEach(btn => btn.classList.remove('active'));
    
    // Agregar clase activa al botón clickeado
    event.target.classList.add('active');
    
    filas.forEach(fila => {
        if (tipo === 'todos' || fila.dataset.tipo === tipo) {
            fila.style.display = '';
        } else {
            fila.style.display = 'none';
        }
    });
}

// Activar el botón "Todos" por defecto
document.addEventListener('DOMContentLoaded', function() {
    document.querySelector('.btn-group .btn').classList.add('active');
});
</script>

<%- include('partials/modal_nueva_transaccion') %>
<%- include('partials/footer') %>