{
  "name": "gestor-gastos-js",
  "version": "1.0.0",
  "description": "Sistema MVC para gestion de gastos con Node.js + Express + Firebase",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "vercel-build": "echo 'Build complete'",
    "migrate": "node migrate-data.js",
    "build": "npm run build:web",
    "build:web": "node build-web.js",
    "cap:init": "npx cap init",
    "cap:add:android": "npx cap add android",
    "cap:sync": "npx cap sync",
    "cap:build": "npm run build && npx cap sync",
    "android:build": "npm run cap:build && npx cap open android",
    "apk:build": "npm run build && npx cap sync && cd android && ./gradlew assembleDebug"
  },
  "devDependencies": {
    "@capacitor/android": "^5.7.8",
    "@capacitor/cli": "^5.7.8",
    "@capacitor/core": "^5.7.8",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "connect-flash": "^0.1.1",
    "dotenv": "^16.4.0",
    "ejs": "^3.1.9",
    "express": "^4.19.2",
    "express-session": "^1.18.2",
    "firebase-admin": "^12.0.0",
    "jsonwebtoken": "^9.0.2"
  }
}
